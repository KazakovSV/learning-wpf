<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="BasicDialogBox.MainWindow"
        Title="Basic Dialog" Height="288" Width="384">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Padding="10,3"
                    Margin="10,5,5,10" Content="Ok"/>
            <Button Padding="10,3"
                    Margin="5,5,10,10" Content="Cancel"/>
        </StackPanel>
        <TextBox DockPanel.Dock="Top"
                 Margin="10,10,10,5" Text="This is a test"/>
    </DockPanel>
</Window>
